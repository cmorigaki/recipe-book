<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- The primary brand color of your app, used most predominantly in theming -->
        <item name="colorPrimary">#FF802E</item>
        <!-- A lighter/darker variant of your primary brand color, used sparingly in theming -->
        <item name="colorPrimaryVariant">#FFB15E</item>
        <!-- The color used for elements displayed on top of your primary colors
        (eg. Text and icons, often white or semi-transparent black depending on accessibility) -->
        <item name="colorOnPrimary">@color/ghostWhite</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">#FF802E</item>

        <!-- a darker variant of the primary color, used for the toolbar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">#00000000</item>
        <!-- status bar color. colorPrimaryDark has influence over this too -->
        <item name="android:statusBarColor">@color/translucent</item>
        <!--<item name="android:windowBackground">@color/ghostWhite</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->

        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:textColorTertiary">#757575</item>
        <item name="android:textColorHint">#959595</item>

        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <color name="translucent">#33000000</color>
    <color name="colorIcon">#212121</color>
    <color name="colorIconInverse">@color/ghostWhite</color>
    <color name="colorIconDark">@color/ghostWhite</color> <!-- copied from values-night -->
    <color name="textColorPrimaryDark">@color/ghostWhite</color> <!-- copied from values-night -->
    <color name="ghostWhite">#fcfcff</color>
</resources>