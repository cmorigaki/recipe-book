<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearance -->
    <style name="TextAppearance.DS.Toolbar.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_toolbar_normal_100</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- Layout -->
    <style name="Style.DS.Toolbar" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight.ActionBar</item>
    </style>

    <style name="Style.DS.Toolbar.Title" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.DS.Toolbar.Title</item>
        <item name="android:layout_marginEnd">?android:attr/actionBarSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Style.DS.AppBarLayout" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.DayNight.ActionBar</item>
    </style>

    <style name="Style.DS.CollapsingToolbarLayout" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="contentScrim">@color/ghostWhite</item>
        <item name="expandedTitleGravity">top</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|snap</item>
    </style>

    <style name="Style.DS.CollapsingToolbarLayout.HeaderImage" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_collapseParallaxMultiplier">0.5</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

</resources>